{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:8080",
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:ci": "react-scripts test --maxWorkers 4 --watchAll=false --ci --coverage",
    "eject": "react-scripts eject"
  },
  "jest": {
    "coverageThreshold": {
        "global": {
            "statements": 90,
            "branches": 90,
            "functions": 90,
            "lines": 90
        }
    },
    "coverageReporters": [
        "text",
        "html",
        "cobertura"
    ],
    "collectCoverageFrom": [
        "src/**/*.{js,jsx,ts,tsx}",
        "!src/index.js",
        "!src/reportWebVitals.js"
    ],
    "resetMocks": true,
    "restoreMocks": true
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "svgo": "3.0.5"
  }
}
